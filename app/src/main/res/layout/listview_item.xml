<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="10dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginLeft="10dp"
        android:id="@+id/alarm_ic"
        android:layout_centerVertical="true"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="35dp"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/hour_text"
        android:layout_toRightOf="@+id/alarm_ic"
        android:gravity="center"
        android:text="00"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="35sp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:id="@+id/colon"
        android:layout_centerVertical="true"
        android:text=":"
        android:layout_toRightOf="@+id/hour_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="35sp"
        android:id="@+id/min_text"
        android:layout_height="match_parent"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/colon"
        android:gravity="center"
        android:text="00"/>
    <TextView
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:id="@+id/ampm_text"
        android:layout_toRightOf="@+id/min_text"
        android:text="오전"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:id="@+id/trash_ic"
        android:src="@drawable/abc_vector_test"
        android:layout_alignParentRight="true"/>

</RelativeLayout>